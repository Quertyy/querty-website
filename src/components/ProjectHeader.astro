---
import Section from './Section.astro';
import Tags from './Tags.astro';

interface Props {
	title: string;
	tags: string[];
    buildTime: string;
	github?: string;
	img?: {
		src: string;
		alt: string;
	};
}

const { title, tags, buildTime, github, img } = Astro.props;
---

<Section>
	<div class="flex flex-col items-center">
		<h1 class="px-14 pb-4 pt-6 text-center text-4xl font-bold">{title}</h1>
		<div class="pb-4">
			<Tags tags={tags} withHref={true} />
		</div>
		<div class="text-sm">
			<span>{buildTime}</span>
		</div>
		{github ? (
			<a href={github} target="_blank" rel="noopener noreferrer">GitHub</a>
		) : (
			<span>PRIVATE</span>
		)}
		{img && <img src={img.src} alt={img.alt} class="mt-4" />}
	</div>
</Section>